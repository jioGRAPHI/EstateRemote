    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:background="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/bldg_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/a"
                tools:ignore="VectorDrawableCompat" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:background="#000000"
            android:weightSum="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:weightSum="1"
                android:orientation="horizontal">

                <android.widget.Button
                    android:id="@+id/btn10"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    app:backgroundTint="@null"
                    android:background="@drawable/btn_layout"
                    android:textSize="10sp"
                    android:text="Ayala Side"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/rebelton_extended">
                </android.widget.Button>

                <android.widget.Button
                    android:id="@+id/btn11"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    app:backgroundTint="@null"
                    android:background="@drawable/btn_layout"
                    android:textSize="10sp"
                    android:text="Ritz Side"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/rebelton_extended">
                </android.widget.Button>

                <android.widget.Button
                    android:id="@+id/btn12"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    app:backgroundTint="@null"
                    android:background="@drawable/btn_layout"
                    android:textSize="10sp"
                    android:text="Urdaneta Side"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/rebelton_extended">
                </android.widget.Button>

                <android.widget.Button
                    android:id="@+id/btn13"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    app:backgroundTint="@null"
                    android:background="@drawable/btn_layout"
                    android:textSize="10sp"
                    android:text="Discovery Primea Side"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/rebelton_extended">
                </android.widget.Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:weightSum="1"
                android:orientation="horizontal">

                <android.widget.Button
                    android:id="@+id/btn02"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    app:backgroundTint="@null"
                    android:background="@drawable/btn_layout"
                    android:textSize="16sp"
                    android:text="Lobby"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/rebelton_extended">
                </android.widget.Button>

                <android.widget.Button
                    android:id="@+id/btn01"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    app:backgroundTint="@null"
                    android:background="@drawable/btn_layout"
                    android:textSize="13sp"
                    android:text="Second Floor"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/rebelton_extended">
                </android.widget.Button>

                <android.widget.Button
                    android:id="@+id/btn03"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    app:backgroundTint="@null"
                    android:background="@drawable/btn_layout"
                    android:textSize="12sp"
                    android:text="Amenity"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/rebelton_extended">
                </android.widget.Button>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:weightSum="1"
                android:orientation="horizontal">


                <android.widget.Button
                    android:visibility="gone"
                    android:id="@+id/btn04"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    app:backgroundTint="@null"
                    android:background="@drawable/btn_layout"
                    android:textSize="12sp"
                    android:text="Amenity (Penthouse)"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/rebelton_extended">
                </android.widget.Button>

                <android.widget.Button
                    android:id="@+id/btn06"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    app:backgroundTint="@null"
                    android:background="@drawable/btn_layout"
                    android:textSize="12sp"
                    android:text="Typical Floor"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/rebelton_extended">
                </android.widget.Button>

                <android.widget.Button
                    android:id="@+id/btn07"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    app:backgroundTint="@null"
                    android:background="@drawable/btn_layout"
                    android:textSize="12sp"
                    android:text="Landscape"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/rebelton_extended">
                </android.widget.Button>

                <android.widget.Button
                    android:id="@+id/btn08"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    app:backgroundTint="@null"
                    android:background="@drawable/btn_layout"
                    android:textSize="14sp"
                    android:text="Street"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/rebelton_extended">
                </android.widget.Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:weightSum="1"
                android:orientation="horizontal"
                android:gravity="center">

                <android.widget.Button
                    android:id="@+id/btn05"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    app:backgroundTint="@null"
                    android:background="@drawable/btn_layout"
                    android:textSize="14sp"
                    android:text="All"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/rebelton_extended">
                </android.widget.Button>

                <android.widget.Button
                    android:id="@+id/btn09"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    app:backgroundTint="@null"
                    android:background="@drawable/btn_layout"
                    android:textSize="14sp"
                    android:text="Random"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/rebelton_extended">
                </android.widget.Button>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>